<% provide(:title, 'All users')  %>

<h1>All users</h1>


<table class="table table-striped">
  <thead>
      <tr>
         <th>Id</th>
         <th>Image</th>
         <th>Name</th>
         <th>Email</th>
         <th>Actions</th>
     </tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
  	<tr>
       <td><%= user.id  %></td>
       <td><%= gravatar_for user, size: 50  %></td>
       <td><%= link_to user.name, user %></td>
       <td><%= user.email %></td>
       <td><%= link_to 'Edit', edit_user_path(user) %> | 

        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
    <% end  %>
  </tbody>
</table>
<%= will_paginate %>